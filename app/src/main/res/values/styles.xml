<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainScreenButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">@dimen/space_between_main_buttons</item>
        <item name="android:backgroundTint">?attr/colorSurface</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/header_text</item>
        <item name="cornerRadius">@dimen/main_button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_button_icon_padding</item>
        <item name="iconTint">?attr/colorOnSurface</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="RegularText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/regular_text</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="HeaderText">
        <item name="android:textSize">@dimen/header_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="PlaceholderMessage">
        <item name="android:textSize">@dimen/placeholder_text</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">center</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="ActionButton" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/action_button_text</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="SearchError">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">110dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="RegularText.SettingsItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingVertical">@dimen/settings_item_vertical_padding</item>
        <item name="drawableTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="RegularText.TrackInfo">
        <item name="android:textSize">@dimen/track_info_text</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="RegularText.TrackInfo.TrackName">
        <item name="android:textSize">@dimen/regular_text</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:textSize">@dimen/header_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="Switch" parent="RegularText.SettingsItem">
        <item name="colorControlActivated">@color/yp_blue</item>
        <item name="colorSwitchThumbNormal">@color/yp_gray</item>
        <item name="android:colorForeground">@color/yp_gray</item>
    </style>

    <style name="PlayerSecondaryFAB" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:layout_width">@dimen/player_secondary_fab</item>
        <item name="android:layout_height">@dimen/player_secondary_fab</item>
        <item name="fabCustomSize">@dimen/player_secondary_fab</item>
        <item name="layout_constraintHorizontal_chainStyle">spread_inside</item>
    </style>

    <style name="PlayerPlayFAB" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:layout_width">@dimen/player_play_fab</item>
        <item name="android:layout_height">@dimen/player_play_fab</item>
        <item name="fabCustomSize">@dimen/player_play_fab</item>
        <item name="android:foregroundTint">?attr/colorOnPrimary</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="PlayerTrackInfo" parent="RegularText">
        <item name="android:textColor">@color/yp_gray</item>
        <item name="android:textSize">@dimen/player_track_info</item>
    </style>

    <style name="PlayerTrackInfo.Value">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/player_track_info_value</item>
        <item name="layout_constraintHorizontal_bias">1</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="LibraryTab" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">14sp</item>
        <item name="tabTextColor">?attr/colorOnPrimary</item>
        <item name="tabIndicatorColor">?attr/colorOnPrimary</item>
        <item name="tabIndicatorFullWidth">true</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="BottomNavTextAppearance">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CreatePlaylistButton" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="backgroundTint">@drawable/create_playlist_button_tint</item>
        <item name="android:background">@drawable/create_playlist_button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/regular_text</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
    </style>
    
    <style name="OutlinedInputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
</resources>