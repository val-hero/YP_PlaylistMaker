<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainScreenButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">@dimen/space_between_main_buttons</item>
        <item name="android:backgroundTint">?attr/colorSurface</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/header_text</item>
        <item name="cornerRadius">@dimen/main_button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_button_icon_padding</item>
        <item name="iconTint">?attr/colorOnSurface</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="RegularText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/regular_text</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="HeaderText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/header_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="SearchErrorText">
        <item name="android:textSize">@dimen/placeholder_text</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">center</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="ActionButton" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/action_button_text</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="SearchError">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">110dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="RegularText.SettingsItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingVertical">@dimen/settings_item_vertical_padding</item>
        <item name="drawableTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="RegularText.TrackInfo">
        <item name="android:textSize">@dimen/track_info_text</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="RegularText.TrackInfo.TrackName">
        <item name="android:textSize">@dimen/regular_text</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:textSize">@dimen/header_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="Switch" parent="RegularText.SettingsItem">
        <item name="colorControlActivated">@color/yp_blue</item>
        <item name="colorSwitchThumbNormal">@color/yp_gray</item>
        <item name="android:colorForeground">@color/yp_gray</item>
    </style>
</resources>