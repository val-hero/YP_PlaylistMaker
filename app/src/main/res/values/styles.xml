<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainScreenButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">@dimen/space_between_main_buttons</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/screen_header</item>
        <item name="cornerRadius">@dimen/main_button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_button_icon_padding</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="ScreenHeaderText">
        <item name="android:textSize">@dimen/screen_header</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="SettingsScreenItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingVertical">@dimen/settings_item_vertical_padding</item>
        <item name="android:paddingEnd">@dimen/settings_icon_right_padding</item>
        <item name="android:textSize">@dimen/settings_item_title</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
        <item name="contentInsetStartWithNavigation">0dp</item>

    </style>

</resources>