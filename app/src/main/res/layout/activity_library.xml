<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".library.ui.LibraryActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/library_toolbar"
        style="@style/Toolbar"
        app:navigationIcon="@drawable/navigate_back"
        app:title="@string/library_title" />
    
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/library_tab_layout"
        style="@style/LibraryTab"
        app:tabIndicator="@drawable/custom_tab_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/library_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>